@import "../template/drcodeinfo/drcodeinfo.wxss";
.drconfirm-head {
  display: block;
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  margin: 40rpx auto 0;
}
.drconfirm {
  width: 92%;
  margin: 0 auto;
  padding-bottom: 40rpx;
}
.confrim-list {
  width: 100%%;
  height: 98rpx;
  padding: 24rpx 0;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  color: #646464;
  border-bottom: 1rpx solid #dcdcdc;
}
.confrim-list text {
  width: 181rpx;
  color: #282828;
  margin-right: 56rpx;
}
.confrim-ipt-list {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}
.mon-ipt {
  display: block;
  width: 320rpx;
  padding: 2rpx 0;
}
.mon-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 22rpx;
  position: absolute;
  top:  50%;
  right: 0;
  margin-top: -30rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #1ed2af;
  font-size: 28rpx;
  color: #fff;
}
.drconfirm-tip {
  display: block;
  margin:  50rpx 0 36rpx;
  line-height: 150%;
  color: #969696;
  font-size: 30rpx;
}
.dr-code {
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 36rpx auto 34rpx;
}
.dr-text {
  display: block;
  font-size: 34rpx;
  color: #282828;
  line-height: 150%;
  margin-top: 50rpx;
}
.img-box2 {
  margin-bottom: 0;
  padding-bottom: 0;
}
.drconfirm-codeimg {
  width: 390rpx;
  height: 390rpx;
}
.drconfirm-wxcodeimg {
  width: 390rpx;
  height: 444rpx;
  padding: 0rpx;
}
.preview-code {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  z-index: 20;
}
.preview-code image {
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top:  50%;
  left: 50%;
}
.preview-img {
  margin-left: -250rpx;
  margin-top: -250rpx;
}
.checkhead-img  {
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}
.edithead-inner {
  width: 100%;
  height: auto;
  position: absolute;
  left: 0;
  bottom: 0;
}
.edithead-list {
  width: 100%;
  line-height: 96rpx;
  font-size: 40rpx;
  letter-spacing: 0.8rpx;
  text-align: center;
  color: #272727;
  background-color: #fff;
}
.edit-line {
  display: block;
  width: 100%;
  height: 20rpx;
  background-color: #ebebeb;
}
.checkhead-btn {
  width: 100%;
  height: auto;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.checkhead-btn button{
  display: block;
  width: 200rpx;
  padding: 0;
  margin: 0;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: transparent;
}
.drconfirm-help {
  width: 229rpx;
  margin-top: 54rpx;
}