.drchat {
  width: 100%;
  height: 100%;
  background-color: #f0eff5;
  position: relative;
}
.dr-patient-info {
  width: 100%;
  height: 258rpx;
  padding: 30rpx 34rpx;
  background-color: #fff;
  border: 1rpx solid #1ed2af;
  border-radius: 10rpx;
}
.info-tit {
  display: block;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #282828;
}
.info-list {
  margin-bottom: 16rpx;
  font-size: 34rpx;
  color: #282828;
}
.weight500 {
  font-weight: 800;
}
.drchat-time {
  display: block;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #b4b4b4;
}
.drchat-l {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.drchat-r {
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.drchat-head {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.drchat-info {
  width: 92%;
  margin:  0 auto;
  padding-top: 120rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.drchat-msg {
  max-width: 60%;
  display: inline-block;
  margin-left: 20rpx;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border-top-left-radius: 0;
  position: relative;
  font-size: 32rpx;
}
.drchat-head-r {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left:  20rpx;
}
.drchat-msg-r {
  max-width: 60%;
  display: inline-block;
  margin-left: 20rpx;
  padding: 24rpx 30rpx;
  background-color: #bef1e4;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 0;
  position: relative;
  font-size: 32rpx;
}
.chat-talk {
  width: 20rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
}
.chat-talk-l {
  left: -18rpx;
}
.chat-img {
  width: 240rpx;
  height: 180rpx;
}
.chat-talk-r {
  right:  -18rpx;
}
.sub-chat {
  box-sizing: border-box;
  height: 98rpx;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #dcdcdc;
  background-color: #f0eff5;
}
.chat-ipt {
  box-sizing: border-box;
  width: 627rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 10rpx;
  border: 1rpx solid #dcdcdc;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.chat-pic {
  width: 66rpx;
  height: 66rpx;
  margin: 18rpx 0 18rpx 18rpx;
}
.chat-btn {
  height: 70rpx;
  padding: 0 22rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1ed2af;
  margin: 0;
  border: 0;
}
.red {
  height: 100rpx;
}
.patient-tit {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #368efc;
  font-size: 26rpx;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #f0eff5;
  border: 2rpx solid #dcdcdc;
}
.end-btn {
  background-color: #c9c9c9;
}
.colaf {
  background-color: #1ed2af;
}
.padd50 {
  padding-top: 65%;
}
.patient-refund {
  position: fixed;
  top:0;
  left: 0;
}
.refund-btn {
  width: 156rpx;
  padding: 0 22rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  position: absolute;
  top: 20rpx;
  right: 28rpx;
  margin-top:0;
}
.view-refund-hidden {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: transparent;
}
.refound-inner {
  width: 516rpx;
  height: auto;
  padding: 60rpx 44rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  box-shadow: 0 0 14px 0 rgba(0, 0, 0, 0.2);
  margin: 280rpx auto 0;
}
.refound-inner-tit {
  display: block;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}
.refound-inner-grop {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.refound-inner-label {
  display: block;
  width: 50%;
  height: auto;
  font-size: 32rpx;
  margin-top: 24rpx;
}
.refound-inner-radio {
  transform:scale(.8);
}
.refond-inner-btn {
  width: 100%;
  line-height: 80rpx;
  margin-top: 44rpx;
  border-radius: 10rpx;
  background-color: #1cc5a4;
  color: #fff;
  font-size: 32rpx;
}
.refont-inner-text {
  display: block;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #f1001e;
}
.patientchat-end-tit {
  margin-bottom: 36rpx;
}
.patientchat-end-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 44rpx;
}
.colc9 {
  background-color: #c9c9c9;
}
