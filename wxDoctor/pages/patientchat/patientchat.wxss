.drchat {
  width: 100%;
  height: 100%;
  background-color: #f0eff5;
  position: relative;
}
.dr-patient-info {
  width: 100%;
  height: 258rpx;
  padding: 30rpx 34rpx;
  background-color: #fff;
  border: 1rpx solid #1ed2af;
  border-radius: 10rpx;
}
.info-tit {
  display: block;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #282828;
}
.info-list {
  margin-bottom: 16rpx;
  font-size: 34rpx;
  color: #282828;
}
.weight500 {
  font-weight: 800;
}
.drchat-time {
  display: block;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #b4b4b4;
}
.drchat-l {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.drchat-r {
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.drchat-head {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.drchat-info {
  width: 92%;
  margin:  0 auto;
  padding-top: 120rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.drchat-msg {
  max-width: 60%;
  display: inline-block;
  margin-left: 20rpx;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border-top-left-radius: 0;
  position: relative;
  font-size: 32rpx;
}
.drchat-head-r {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left:  20rpx;
}
.drchat-msg-r {
  max-width: 60%;
  display: inline-block;
  margin-left: 20rpx;
  padding: 24rpx 30rpx;
  background-color: #bef1e4;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 0;
  position: relative;
  font-size: 32rpx;
}
.chat-talk {
  width: 20rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
}
.chat-talk-l {
  left: 0;
}
.chat-img {
  width: 240rpx;
  height: 180rpx;
}
.chat-talk-r {
  right:  -16rpx;
}
.sub-chat {
  box-sizing: border-box;
  height: 98rpx;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #dcdcdc;
  background-color: #f0eff5;
}
.chat-ipt {
  box-sizing: border-box;
  width: 489rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 10rpx;
  border: 1rpx solid #dcdcdc;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.chat-pic {
  width: 66rpx;
  height: 66rpx;
  margin: 18rpx;
}
.chat-btn {
  height: 70rpx;
  padding: 0 22rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1ed2af;
  margin: 0;
}
.red {
  height: 100rpx;
}
.patient-tit {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #368efc;
  font-size: 26rpx;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #f0eff5;
}
.end-btn {
  background-color: #c9c9c9;
}
