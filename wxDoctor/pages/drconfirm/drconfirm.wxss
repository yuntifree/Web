@import "../template/drinfo/drinfo.wxss";
.drconfirm-head {
  display: block;
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  margin: 40rpx auto 0;
}
.drconfirm {
  width: 92%;
  margin: 0 auto;
  padding-bottom: 40rpx;
}
.confrim-list {
  width: 100%%;
  height: 98rpx;
  padding: 24rpx 0;
  display: flex; 
  flex-direction: row;
  font-size: 36rpx;
  color: #646464;
  border-bottom: 1px solid #dcdcdc;
}
.confrim-list text {
  width: 181rpx;
  color: #282828;
  margin-right: 56rpx;
}
.confrim-ipt-list {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}
.mon-ipt {
  display: block;
  width: 181rpx;
  padding: 2px 0;
}
.mon-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 22rpx;
  position: absolute;
  top:  50%;
  right: 0;
  margin-top: -30rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #1ed2af;
  font-size: 28rpx;
  color: #fff;
}
.drconfirm-tip {
  display: block;
  margin:  50rpx 0 36rpx;
  line-height: 150%;
  color: #969696;
  font-size: 26rpx;
}
.dr-code {
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 36rpx auto 34rpx;
}
.dr-text {
  display: block;
  font-size: 30rpx;
  color: #282828;
  line-height: 150%;
}
