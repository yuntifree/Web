@import "../template/drinfo/drinfo.wxss";
.drconfirm-head {
  display: block;
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  margin: 40rpx auto 0;
}
.drconfirm {
  width: 92%;
  margin: 0 auto;
  padding-bottom: 40rpx;
}
.confrim-list {
  width: 100%%;
  height: 98rpx;
  padding: 24rpx 0;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  color: #646464;
  border-bottom: 1rpx solid #dcdcdc;
}
.confrim-list text {
  width: 181rpx;
  color: #282828;
  margin-right: 56rpx;
}
.confrim-ipt-list {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}
.mon-ipt {
  display: block;
  width: 320rpx;
  padding: 2rpx 0;
}
.mon-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 22rpx;
  position: absolute;
  top:  50%;
  right: 0;
  margin-top: -30rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #1ed2af;
  font-size: 28rpx;
  color: #fff;
}
.drconfirm-tip {
  display: block;
  margin:  50rpx 0 36rpx;
  line-height: 150%;
  color: #969696;
  font-size: 30rpx;
}
.dr-code {
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 36rpx auto 34rpx;
}
.dr-text {
  display: block;
  font-size: 34rpx;
  color: #282828;
  line-height: 150%;
}
.img-box {
  width: 400rpx;
  height: 400rpx;
  margin: 36rpx auto 34rpx;
}
.img-box2 {
  margin-bottom: 0;
  padding-bottom: 0;
}
.drconfirm-codeimg {
  width: 390rpx;
  height: 390rpx;
  padding: 20rpx;
}
.drconfirm-wxcodeimg {
  width: 390rpx;
  height: 444rpx;
  padding: 0rpx;
}

.preview-code {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  z-index: 20;
}
.preview-code image {
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top:  50%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -250rpx;
}