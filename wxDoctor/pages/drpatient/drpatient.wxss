.preview-code {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  z-index: 20;
}
.preview-code image {
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top:  50%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -250rpx;
}
.info-text2 {
  width: auto;
  text-align: right;
}
.pay-sign {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #60c64b;
  color: #fff;
  font-size: 26rpx;
}
.end-sign {
  background-color: #1cc5a4;
}
.drpatient-norelation {
  color: #1ed2af;
  font-size: 40rpx;
  margin: 44rpx 0;
}
.color9f {
  color: #24cb9f;
}
.text-spec {
  height: 40rpx;
  padding-top: 20rpx;
}
.drpatient-tip {
  display: block;
  font-size: 28rpx;
  color: #9a9a9a;
  margin-top: 44rpx;
}

