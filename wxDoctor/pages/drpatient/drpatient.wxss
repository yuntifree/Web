@import "../template/drcodeinfo/drcodeinfo.wxss";

.con-inner {
  width: 100%;
  height: 100%;
}
.drpaitent-list {
  width: 92%;
  margin: 0 auto;
  padding: 24rpx 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #dcdcdc;
}
.drpaitent-head {
  position: relative;
  width: 20%;
  max-width: 114rpx;
}
.drpaitent-img {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
}
.drpaitent-chat-num {
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  right: 0rpx;
  bottom: 0;
  background-color: #e5001c;
  color: #fff;
  border-radius: 50%;
}
.drpaitent-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 85%;
  padding-left: 14rpx;
}
.info-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
  padding: 10rpx 0;
}
.info-text-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #282828;
}
.info-text-chat {
  display: block;
  font-size: 26rpx;
  color:  #828282;
  width: 100%;
}
.info-text-time {
  font-size: 24rpx;
  color: #b4b4b4;
}

